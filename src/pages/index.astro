---
import Layout from '../layouts/Layout.astro';

import Shapes from '../components/Shapes.svelte';
---

<Layout>
  <Shapes client:idle />
  <main>
    <h1>Joseph Daly</h1>
  </main>
  <div class="filler">
    <p>Foo</p>
  </div>
</Layout>

<style>
  :root {
    margin: 0;
    padding: 0;
  }

  main {
    display: grid;
    place-items: center;
    height: 100vh;
    width: 100vw;
  }

  main h1 {
    font-size: 12vw;
  }

  h1 {
    color: white;
  }

  .filler {
    height: 3440px;
  }
</style>
