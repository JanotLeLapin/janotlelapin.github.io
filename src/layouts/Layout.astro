---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#14b8a6" />
    <meta name="og:title" content="Joseph Daly" />
    <meta name="og:locale" content="fr_FR" />
    <meta name="og:description" content="DÃ©veloppeur web fullstack, entre autres." />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style lang="scss" is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer utilities {
    .cards {
      @apply grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 mx-16 py-8;

      > li {
        @apply transition-all;
      }

      &:has(:hover) > li:not(:hover) {
        opacity: 0.7;
      }
    }
  }

  @layer base {
    * {
      @apply m-0;
    }

    html {
      @apply text-gray-700 bg-gray-100 font-medium;
    }

    h1, h2, h3 {
      @apply font-bold text-gray-900;
    }

    h1 {
      @apply text-6xl;
    }

    h2 {
      @apply text-3xl;
    }

    h3 {
      @apply text-2xl;
    }

    a {
      @apply text-teal-500 transition-colors hover:text-teal-300;
    }
  }

	html {
    font-family: 'Roboto', system-ui, sans-serif;
	}

	code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
